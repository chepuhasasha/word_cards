    "axios": "^1.13.2",
    "eslint": "^9.39.1",
    "eslint-plugin-vue": "~10.5.1",
    "jiti": "^2.6.1",
    "npm-run-all2": "^8.0.4",
    "postcss-html": "^1.7.0",
    "postcss-scss": "^4.0.9",
