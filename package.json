    "lint:js": "eslint . --fix --cache",
    "lint:styles": "stylelint \"src/**/*.{vue,css,sass,scss}\" --fix",
    "format": "run-p format:code format:styles",
    "format:code": "prettier --write \"src/**/*.{ts,js,vue}\"",
    "format:styles": "stylelint \"src/**/*.{vue,css,sass,scss}\" --fix",
    "audio": "node scripts/audio.js public/sets.json",
